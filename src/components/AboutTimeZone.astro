<span class="tooltip">Porto, Portugal.</span>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const tooltip = document.querySelector('.tooltip');

    tooltip.setAttribute('data-content', `UTC+1 - ${new Intl.DateTimeFormat('en-US', {
      timeZone: 'Europe/Lisbon',
      hour: 'numeric',
      minute: '2-digit',
      hour12: true
    }).format(new Date())}`)
  });
</script>